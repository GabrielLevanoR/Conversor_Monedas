<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="top"
        android:alpha=".65"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"

        android:src="@color/colorPrimary" />
    <RelativeLayout

        android:id="@+id/convr"
        android:background="@color/white"
        android:layout_width="350dp"
        android:layout_height="560dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center|center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="-56dp"
            android:text="Convertidor De Moneda"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/montoAConvertir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="Cantidad a Convertir"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/currency_to_be_converted"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/montoAConvertir"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/deLa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/currency_to_be_converted"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="De La Moneda:"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="15dp" />

        <Spinner
            android:id="@+id/convert_from"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@+id/deLa"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/aLa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/convert_from"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/black"
            android:text="A La Moneda:"
            android:textAlignment="center"
            android:textSize="15dp" />

        <Spinner
            android:id="@+id/convert_to"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@+id/aLa"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/button"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/convert_to"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="65dp"
            android:background="@drawable/custom_button"
            android:text="CONVERTIR"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/currency_converted"
            android:layout_width="250dp"
            android:layout_height="40dp"

            android:layout_below="@+id/button"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="20dp"
            android:hint="Resultado" />
    </RelativeLayout
>

</RelativeLayout>

